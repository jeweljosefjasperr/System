                on_release:
                    app.root.current = "ProfilePage_DeliveryPerson"
                    root.manager.transition.direction = 'left'

            
        ThreeLineIconListItem:
            text: "[color=#0000FF]Abeto Mirasol Taft South[/color]"
            secondary_text: "[color=#FF0000]Balantang[/color]"
            tertiary_text: "Bread and Pastries"
            font_size: "8sp"
            bold: True
            pos_hint:{"x": 0.0, "y": 0.7}
            text_color: rgba (0, 0, 0, 1)
            on_release:
                app.root.current = "DeliveryInfo1"
                root.manager.transition.direction = 'left'
            IconLeftWidget:
                icon: "map-marker-distance"
        
        ThreeLineIconListItem:
