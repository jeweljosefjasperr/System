<Add_Customer>:
    MDFloatLayout:
        md_bg_color: 246, 250, 255, 255
    
        ProfileCard:
            size_hint_y: 0.1
            pos_hint: {"center_y": .95}
            md_bg_color: 0, 0, 0, 1
   
            MDIconButton:
                icon: "arrow-left"
                pos_hint:{"center_y": 0.5}
                user_font_size: "20sp"
                theme_text_color: "Custom"
                text_color: rgba (255, 255, 255, 250)
                on_release:
                    app.root.current = "SellerHomepage"
                    root.manager.transition.direction = 'right'

            MDLabel:
                text: "ADD CUSTOMER"
                font_size: "20sp"
                pos_hint: {"x": 0.15, "center_y": 0.5}
                color: rgba (255, 255, 255, 250)

        MDTextField:
            id: cust_name
            hint_text: "Name of Customer"
            required: True
            size_hint: 0.7, 0.12
            pos_hint: {"x": 0.15, "y": 0.75}

        MDTextField:
            id: cust_phone
            hint_text: "Customer Phone No."
            required: True
            size_hint: 0.7, 0.12
            pos_hint: {"x": 0.15, "y": 0.67}

        MDTextField:
            id: item_name
            hint_text: "Item Name"
            required: True
            size_hint: 0.7, 0.12
            pos_hint: {"x": 0.15, "y": 0.59}
    
        MDTextField:
            id: cust_addr
            hint_text: "Customer Address"
            required: True
            size_hint: 0.7, 0.12
            pos_hint: {"x": 0.15, "y": 0.51}

        MDTextField:
            id: pu_addr
            hint_text: "Pick-up Address"
            required: True
            size_hint: 0.7, 0.12
            pos_hint: {"x": 0.15, "y": 0.43}
    
        MDTextField:
            id:date_order
            hint_text: "Date of Order"
            required: True
            size_hint: 0.7, 0.12
            pos_hint: {"x": 0.15, "y": 0.35}

        MDLabel:
            text: "Category:"
            size_hint: .8, .1
            font_size: "17sp"
            pos_hint : {"x":0.15, "y":0.28}

        Spinner:
            id: category
            size_hint: 0.44, 0.06
            pos_hint: {"x":0.42, "y":0.30}
            required: True
            text: 'Category'
            values: ['Perishable', 'Non-Perishable']
            background_color: 255, 255, 255, 4
            color: 0, 0, 0, 1
            sync_height: True
            on_text:

        MDRaisedButton:
            text: "Add"
            md_bg_color: "black"
            size_hint: 0.3, 0.08
            pos_hint:{"center_x": 0.5, "y": 0.15}
            on_press:
                root.AddCustomer_btn()
            on_release:
                app.root.current = 'SellerHomepage'
            